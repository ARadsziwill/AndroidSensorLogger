<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StartScreen">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_live_logging"
        android:id="@+id/startLiveLogging"
        android:layout_marginTop="47dp"
        android:clickable="true"
        android:onClick="onStartLiveScreen"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Background Logging"
        android:id="@+id/startLoggingService"
        android:layout_below="@+id/startLiveLogging"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:onClick="onStartBackgroundLogging" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Background Logging"
        android:id="@+id/stopLoggingService"
        android:layout_below="@+id/startLoggingService"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onStopBackgroundLogging" />

</RelativeLayout>
